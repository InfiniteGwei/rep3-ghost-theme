                            <img src="{{@site.logo}}" class="logo__image" alt="{{@site.title}}" loading="lazy" />
                        </a>
                    {{else}}
                        <span class="logo__header">
                            <a href="{{@site.url}}" class="blog-info__anchor">{{@site.title}}</a>
                        </span>
                    {{/if}}
