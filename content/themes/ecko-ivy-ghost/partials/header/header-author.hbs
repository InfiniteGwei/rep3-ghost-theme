            <div class="author-title__upper">
                {{#if profile_image}}
                    <picture class="author-title__profile">
                        <img src="{{img_url profile_image size="64"}}" class="author-title__profile-image" alt="{{name}}" loading="lazy" />
                    </picture>
                {{/if}}
                <h1 class="author-title__header">{{name}}</h1>
