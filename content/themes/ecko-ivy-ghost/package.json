{
    "name": "ecko-ivy-ghost",
    "description": "Ivy Theme for Ghost by EckoThemes.",
    "version": "5.2.0",
    "private": true,
    "author": {
        "name": "EckoThemes",
        "email": "support@ecko.me"
    },
    "engines": {
        "ghost": ">=5.0.0"
    },
    "config": {
        "posts_per_page": 1000,
        "card_assets": true,
        "image_sizes": {
            "16": {
                "width": 16
            },
            "32": {
                "width": 32
            },
            "48": {
                "width": 48
            },
            "64": {
                "width": 64
            },
            "96": {
                "width": 96
            },
            "128": {
                "width": 128
            },
            "160": {
                "width": 160
            },
            "240": {
                "width": 240
            },
            "320": {
                "width": 320
            },
            "480": {
                "width": 480
            },
            "800": {
                "width": 800
            },
            "1120": {
                "width": 1120
            },
            "1440": {
                "width": 1440
            },
            "1680": {
                "width": 1680
            },
            "1920": {
                "width": 1920
            }
        },
        "custom": {
            "theme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "User System Preference"
                ],
                "default": "Light"
            },
            "pagination_infinite": {
                "type": "boolean",
                "default": true
            },
            "social_instagram_url": {
                "type": "text",
                "default": ""
            },
            "social_linkedin_url": {
                "type": "text",
                "default": ""
            },
            "social_github_url": {
                "type": "text",
                "default": ""
            },
            "subscribe_enabled": {
                "type": "boolean",
                "default": true
            },
            "subscribe_description": {
                "type": "text",
                "default": "Subscribe to our newsletter and receive access to exclusive posts and content updates. We don't spam and your email won't be shared with third-parties."
            },
            "widget_advertisment_embed_code": {
                "type": "text",
                "default": ""
            },
            "comments_disqus_id": {
                "type": "text",
                "default": "",
                "group": "post"
            },
            "comments_autoload": {
                "type": "boolean",
                "default": false,
                "group": "post"
            }
        }
    },
    "keywords": [
        "ghost-theme"
    ],
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@babel/preset-env": "^7.18.9",
        "del": "^6.1.1",
        "eslint": "^8.20.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.0",
        "eslint-plugin-react": "^7.30.1",
        "gscan": "^4.32.0",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-cssnano": "^2.1.3",
        "gulp-if": "^3.0.0",
        "gulp-inject": "^5.0.5",
        "gulp-livereload": "^4.0.2",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-sass-glob": "^1.1.0",
        "gulp-svgmin": "^4.1.0",
        "gulp-terser": "^2.1.0",
        "gulp-zip": "^5.1.0",
        "lodash": "^4.17.21",
        "node-sass": "^7.0.1",
        "picocolors": "^1.0.0",
        "sass": "^1.53.0",
        "through2": "^4.0.2"
    },

    "dependencies": {
        "lodash": "^4.17.21"
    }
}
